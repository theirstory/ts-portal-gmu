{
  "_comment": "This is an example configuration file. Copy this to config.json and customize for your organization.",

  "organization": {
    "name": "Your Organization Name",
    "displayName": "Your Portal Title",
    "description": "Description of your portal and collection. This appears on the main page.",
    "logo": {
      "_comment": "Optional custom logo path from /public (example: /images/logo.png). If empty, default LogoArchive is used.",
      "path": "",
      "alt": "Organization logo"
    }
  },

  "theme": {
    "colors": {
      "primary": {
        "main": "#1976d2",
        "light": "#2196f3",
        "dark": "#1565c0",
        "contrastText": "#ffffff"
      },
      "secondary": {
        "main": "#239B8B",
        "light": "#2eb8a6",
        "dark": "#1a7a6d",
        "contrastText": "#ffffff"
      },
      "grey": {
        "50": "#fafafa",
        "100": "#f5f5f5",
        "200": "#eeeeee",
        "300": "#e0e0e0",
        "400": "#bdbdbd",
        "500": "#9e9e9e",
        "600": "#757575",
        "700": "#616161",
        "800": "#424242",
        "900": "#212121"
      },
      "text": {
        "primary": "#000000",
        "secondary": "#666666",
        "disabled": "#9e9e9e"
      },
      "background": {
        "default": "#ffffff",
        "paper": "#ffffff",
        "subtle": "#fafafa",
        "mainPage": "#f0f0f0",
        "storyPage": "#e0e0e0"
      },
      "error": {
        "main": "#d32f2f",
        "light": "#ffebee"
      },
      "warning": {
        "main": "#ffeb3b",
        "dark": "#ffc107"
      },
      "success": {
        "main": "#4caf50",
        "light": "#e8f5e9"
      },
      "info": {
        "main": "#2196f3",
        "light": "#e3f2fd"
      },
      "common": {
        "white": "#ffffff",
        "black": "#000000",
        "border": "#e0e0e0",
        "divider": "#eeeeee",
        "overlay": "rgba(0, 0, 0, 0.7)",
        "shadow": "rgba(0, 0, 0, 0.1)"
      }
    }
  },

  "ui": {
    "carouselTopBar": {
      "intervalMs": 5000,
      "_comment": "Paths can be absolute (from /public) or full URLs.",
      "images": ["/images/carousel1.jpg", "/images/carousel2.jpg", "/images/carousel3.jpg"]
    },
    "portalHeaderOverlay": {
      "_comment": "Enable or disable overlay behind portal title/description.",
      "enabled": true
    }
  },

  "ner": {
    "labels": [
      {
        "id": "person",
        "displayName": "Person",
        "color": "#FFCC80"
      },
      {
        "id": "organization",
        "displayName": "Organization",
        "color": "#DCEDC8"
      },
      {
        "id": "location",
        "displayName": "Location",
        "color": "#FFAB91"
      },
      {
        "id": "date",
        "displayName": "Date",
        "color": "#F9C789"
      },
      {
        "id": "event",
        "displayName": "Event",
        "color": "#FFF176"
      },
      {
        "id": "book",
        "displayName": "Book/Publication",
        "color": "#C8E6C9"
      },
      {
        "id": "award",
        "displayName": "Award",
        "color": "#90CAF9"
      },
      {
        "id": "language",
        "displayName": "Language",
        "color": "#E0E0E0"
      },
      {
        "id": "movement",
        "displayName": "Movement",
        "color": "#B39DDB"
      },
      {
        "id": "technology",
        "displayName": "Technology",
        "color": "#FFF59D"
